
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center"><h3>Crear Turno de @ViewBag.NombreServicio.Nombre</h3></div>
                <div class="panel-body">

                    <form action="/Turno/Crear?id=@ViewBag.IdServicio" method="post">

                        <div>
                            <label class="control-label">Fecha :</label>
                            <input class="form-control" type="date" name="Fecha" value="@Model.Fecha" />
                            @Html.ValidationMessage("Fecha")
                        </div>

                        <div>
                            <label class="control-label">Hora de ingreso :</label>
                            <input class="form-control" type="time" name="HoraInicio" value="@Model.HoraInicio" />
                            @Html.ValidationMessage("HoraInicio")
                        </div>

                        <div>
                            <label class="control-label">Hora de salida :</label>
                            <input class="form-control" type="time" name="HoraFin" value="@Model.HoraFin" />
                            @Html.ValidationMessage("HoraFin")
                        </div>

                        <br />
                        <a class="pull-left btn btn-danger" href="/Turno/Index?id=@ViewBag.NombreServicio.IdServicio"><span class="glyphicon glyphicon-circle-arrow-left"></span>Volver</a>

                        <button class="btn btn-primary pull-right"><span class="glyphicon glyphicon-saved"></span> Guardar</button>

                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $("#Ser").css("background-color", "orange");
    });
</script>