
@{
    Layout = null;
}

<h2 id="MiDetalleReservaBuscada"></h2>
    <div class="row">
        <div class="col-sm-11 text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Servicio</th>
                        <th>Ingreso</th>
                        <th>Salida</th>
                        <th>Precio</th>
                        <th>Cant. tickets</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@string.Format("{0:d}", item.Fecha)</td>
                            <td>@item.Servicio.Nombre</td>
                            <td>@item.Turno.HoraInicio</td>
                            <td>@item.Turno.HoraFin</td>
                            <td>@item.Servicio.Precio</td>
                            <td>@item.Cantidad</td>
                            <td>@item.SubTotal</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
