<h2 id="EstoyEnCambiarContraUsuarioCliente"></h2>
<br />
<div class="row">
    <div class="barra">
        <div class="col-sm-4"></div>
        <div class="col-sm-4" id="inputs">
            <form action="/Usuario/CambiarContraUsuario" method="post">
                <div class="form-group">
                    <label class="control-label">Contraseña actual</label>
                    <input type="password" class="form-control" name="Password" value="@Model.Password" />
                    @ViewBag.ValExiste
                    @Html.ValidationMessage("Password")
                </div>
                <div class="form-group">
                    <label class="control-label">Contraseña nueva</label>
                    <input type="password" class="form-control" name="NuevaPassword" />
                    @ViewBag.ValNuevaPassword
                    @Html.ValidationMessage("NuevaPassword")
                </div>
                <div class="form-group">
                    <label class="control-label">Repita contraseña</label>
                    <input type="password" class="form-control" name="RepitaPassword" />
                    @ViewBag.ValNuevaRepitaPassword
                    @Html.ValidationMessage("RepitaPassword")
                </div>
                <a href="/Usuario/VerMiCuenta" class="btn btn-default">Cancelar</a>       <button id="ConfirmarCambioContraUsuarioCliente" class="btn btn-primary">Confirmar cambios</button>
            </form>
        </div>
    </div>
